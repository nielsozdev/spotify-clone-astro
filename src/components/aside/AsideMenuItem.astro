---
interface Props {
  href?: string
  icon?: any
  ariaLabel?: string
}

const { href, icon: Icon, ariaLabel = '' } = Astro.props

const Component = href ? 'a' : 'div'
---

<nav class='w-full'>
  <Component
    class='flex justify-center gap-4 px-5 py-3.5 font-semibold text-zinc-400 transition-all duration-300 hover:text-zinc-100 md:justify-start'
    {href}
    aria-label={ariaLabel}
  >
    {Icon && <Icon class='size-6' />}
    <span class='hidden w-full items-start md:flex'>
      <slot />
    </span>
  </Component>
</nav>
