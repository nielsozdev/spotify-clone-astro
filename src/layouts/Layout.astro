---
import AsideMenu from '@components/aside/AsideMenu.astro'
import Footer from '@components/footer/Footer.astro'
import Main from '@components/main/Main.astro'
import { Player } from '@components/player/Player'
import '@styles/styles.css'
import { ViewTransitions } from 'astro:transitions'

interface Props {
  title: string
}

const { title } = Astro.props
---

<!doctype html>
<html lang='es'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width, initial-scale=1' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <meta name='author' content='Niels Olviera Zurita' />
    <meta name='robots' content='index, follow' />
    <meta name='theme-color' content='#1e1e1e' />
    <meta name='apple-mobile-web-app-capable' content='yes' />
    <meta name='apple-mobile-web-app-status-bar-style' content='black' />
    <meta name='apple-mobile-web-app-title' content='Niles Olivera Zurita' />
    <meta name='msapplication-TileColor' content='#1e1e1e' />
    <meta name='msapplication-TileImage' content='/favicon.svg' />

    <title>{title}</title>

    <ViewTransitions fallback='none' />
  </head>

  <body class='body'>
    <div id='app' class:list={['relative h-full gap-x-2 p-2']}>
      <AsideMenu class='[grid-area:aside]' />

      <Main class='[grid-area:main]'>
        <slot />
      </Main>

      <Footer class='[grid-area:player]'>
        <Player client:load transition:name='media-player' transition:persist />
      </Footer>
    </div>
  </body>
</html>
